@using CinemaProject.Domain.DTO
@using CinemaProject.Service.Interface;
@inject IMovieService movieService
@model AddTicketToCartDTO


<h1>Add a ticket for a movie to your shopping cart</h1>

<div class="container">
    <form asp-action="AddToCart">
        <input type="hidden" asp-for="TicketId" />
        <div class="form-group">
            <label asp-for="Ticket.Movie.Name"></label>
            <input class="form-control" disabled asp-for="@movieService.GetMovieById(Model.Ticket.ForMovieId).Name" />
        </div>
        <div class="form-group">
            <label asp-for="Ticket.ValidForDate"></label>
            <input type="date" class="form-control" disabled asp-for="Ticket.ValidForDate" />
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input type="number" class="form-control" asp-for="Quantity" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Add to shopping cart" />
        </div>
    </form>
</div>