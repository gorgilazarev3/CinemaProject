@model CinemaProject.Domain.DomainModels.Ticket
@inject CinemaProject.Service.Interface.IMovieService movieService

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie:
        </dt>
        <dd class="col-sm-10">
            @movieService.GetMovieById(Model.ForMovieId).Name
        </dd>
        <dt class="col-sm-2">
            Poster for movie:
        </dt>
        <dd class="col-sm-10">
            <img src="@movieService.GetMovieById(Model.ForMovieId).ImageURL" width="125" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidForDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidForDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) $
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
