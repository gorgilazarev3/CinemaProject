@using CinemaProject.Domain.DomainModels;
@model List<Order>

<div class="container">

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer Details</th>
                <th scope="col">Number of tickets</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@item.TicketHolder.Email - @item.TicketHolder.FirstName  @item.TicketHolder.LastName</td>
                    <td>@item.TicketsInOrder.Count()</td>
                    <td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-orderId="@item.Id">Details</a></td>
                    <td><a class="btn btn-outline-primary" asp-action="CreateInvoice" asp-route-orderId="@item.Id">Create Invoice</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>